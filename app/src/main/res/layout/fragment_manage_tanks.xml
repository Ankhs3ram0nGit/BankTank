<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Max Allocation Input -->
    <EditText
        android:id="@+id/maxAllocationInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Max Allocation"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/manageButton"
        app:layout_constraintWidth_percent="0.75"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"/>

    <!-- Save Allocation Button -->
    <Button
        android:id="@+id/manageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:backgroundTint="@color/account_gray"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="@id/maxAllocationInput"
        app:layout_constraintBottom_toBottomOf="@id/maxAllocationInput"
        app:layout_constraintStart_toEndOf="@id/maxAllocationInput"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- RecyclerView for tanks list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tanksRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="72dp"
        app:layout_constraintTop_toBottomOf="@id/maxAllocationInput"
        app:layout_constraintBottom_toTopOf="@id/addTankButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Add Tank Button -->
    <Button
        android:id="@+id/addTankButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Tank"
        android:backgroundTint="@color/account_gray"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="56dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
