<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.expensetracker.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/tanksFragment"
        android:name="com.example.expensetracker.ui.dashboard.TanksFragment"
        tools:layout="@layout/fragment_tanks" >
        <action
            android:id="@+id/action_tanks_to_manage"
            app:destination="@id/manageTanksFragment" />
        <action
            android:id="@+id/action_tanks_to_tankDetails"
            app:destination="@id/tankDetailsFragment" />
    </fragment>


    <fragment
        android:id="@+id/manageTanksFragment"
        android:name="com.example.expensetracker.ui.dashboard.ManageTanksFragment"
        tools:layout="@layout/fragment_manage_tanks" />


    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.expensetracker.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_other"
        android:name="com.example.expensetracker.ui.other.OtherFragment"
        android:label="Import"
        tools:layout="@layout/fragment_other" />
    <fragment
        android:id="@+id/tankDetailsFragment"
        android:name="com.example.expensetracker.ui.dashboard.TankDetailsFragment"
        android:label="Tank Details"
        tools:layout="@layout/tank_details" />
    <fragment
        android:id="@+id/accountDetailFragment"
        android:name="com.example.expensetracker.ui.home.AccountDetailFragment"
        tools:layout="@layout/account_details">
        <action
            android:id="@+id/action_home_to_accountDetailFragment"
            app:destination="@id/accountDetailFragment" />
    </fragment>

</navigation>